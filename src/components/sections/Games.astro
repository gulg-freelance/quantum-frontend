---
import { getAll } from "../../lib/api";

const games = getAll("games", {
  populate: "*",
});
---

<section id="games">
  <h2>Игры</h2>

  <div class="grid">
    {
      await Array.fromAsync(games, (game: any) => (
        <div class="frame">
          {game.image && (
            <img
              src={new URL(game.image.url, import.meta.env.STRAPI_URL).href}
            />
          )}
          <h3>{game.name}</h3>
          <p>{game.description}</p>
        </div>
      ))
    }
  </div>
</section>

<style lang="scss">
  .frame {
    display: grid;
    grid-template-rows: subgrid;
    grid-row: span 3;
  }

  img {
    border-radius: 32px;
    width: 100%;
    height: 192px;
    object-fit: cover;
  }

  h3,
  p {
    margin: 0;
    padding: 0 8px;
  }

  h3 {
    margin-top: 16px;
    margin-bottom: 8px;
    align-self: center;
  }
</style>
