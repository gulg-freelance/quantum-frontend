---
import { getAll } from "../../lib/api";

const games = getAll("games", {
  populate: "*",
});
---

<section id="games">
  <h2>Игры</h2>

  <div class="grid" data-games-grid>
    {
      await Array.fromAsync(games, (game: any) => (
        <div class="frame">
          {game.image && (
            <img
              src={new URL(game.image.url, import.meta.env.STRAPI_URL).href}
            />
          )}
          <h3>{game.name}</h3>
          <p>{game.description}</p>
        </div>
      ))
    }
  </div>
</section>

<style lang="scss">
  @use "../../styles/wrap";

  .frame {
    display: grid;
    grid-template-rows: subgrid;
    grid-row: span 3;

    &.expanded {
      grid-template-columns: auto 1fr;
      grid-column: 1 / -1;

      img {
        grid-row: span 2;
      }

      p {
        height: max-content;
      }
    }

    &:not(.expanded) {
      p {
        display: none;
      }
    }
  }

  img {
    border-radius: 32px;
    width: 100%;
    height: 192px;
    object-fit: cover;
  }

  h3,
  p {
    @include wrap.wrap;

    margin: 0;
    padding: 0 8px;
  }

  h3 {
    margin-top: 16px;
    margin-bottom: 8px;
    align-self: center;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { Flip } from "gsap/Flip";
  gsap.registerPlugin(Flip);

  const grid = document.querySelector("[data-games-grid]")!;
  for (const card of grid.children)
    card.addEventListener("click", () => {
      const state = Flip.getState(grid.children);

      const current = grid.querySelector(".expanded");
      if (current && current !== card) current.classList.remove("expanded");
      card.classList.toggle("expanded");

      Flip.from(state, {
        duration: 0.5,
        ease: "power1.inOut",
      });
    });
</script>
