---
import { Image } from "astro:assets";
import Phone from "../Phone.astro";
import logo from "../../assets/logo.png";
import Socials from "../Socials.astro";
---

<div class="container">
  <header>
    <a class="logo" href="#hero">
      <Image
        src={logo}
        height="24"
        alt="Арена Квантум"
        title="Арена Квантум"
        draggable="false"
      />
    </a>

    <nav>
      <ul>
        <li><a href="#bundles">Пакеты</a></li>
        <li><a href="#tariffs">Тарифы</a></li>
        <li><a href="#games">Игры</a></li>
        <li><a href="#videos">Видео</a></li>
      </ul>
    </nav>

    <Phone />

    <Socials height="24" />
  </header>
</div>

<style lang="scss">
  @use "../../styles/theme";

  .container {
    position: fixed;
    top: 0;
    z-index: 1;

    width: 100%;
    height: 64px;
    margin-bottom: -64px;

    background-color: rgba(theme.$bg, 80%);
    backdrop-filter: blur(4px);
  }

  header,
  ul {
    display: flex;
    align-items: center;
  }

  header {
    justify-content: space-between;

    height: 100%;
  }

  .logo:hover {
    filter: drop-shadow(0px 2px 4px rgba(theme.$pink, 80%));
  }

  ul {
    justify-content: space-between;

    padding: 0;
    margin: 0;

    list-style-type: none;
  }

  nav > ul {
    gap: 48px;
  }
</style>
