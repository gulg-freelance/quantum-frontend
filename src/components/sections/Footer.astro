<style lang="scss">
  footer {
    max-width: 1100px;
    box-sizing: border-box;
    margin: 0 auto;
    margin-top: 128px;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

  address {
    font-style: normal;

    div {
      margin-bottom: 24px;
    }
  }

  hr {
    margin: 64px 0;
  }

  .social {
    display: inline-flex;
    justify-content: space-between;
    gap: 24px;

    padding: 0;
    margin: 0;

    list-style-type: none;
  }
