---
// styles
import "../styles/global.scss";

// fonts
import "@fontsource/russo-one";
import "@fontsource-variable/roboto";

import Header from "../components/sections/Header.astro";
import Hero from "../components/sections/Hero.astro";
import Photos from "../components/sections/Photos.astro";
import Promo from "../components/sections/Promo.astro";
import Bundles from "../components/sections/Bundles.astro";
import Tariffs from "../components/sections/Tariffs.astro";
import Games from "../components/sections/Games.astro";
import Videos from "../components/sections/Videos.astro";
import CTA from "../components/sections/CTA.astro";
import Footer from "../components/sections/Footer.astro";
import SideMenu from "../components/SideMenu.astro";

const title = "VR Арена КвантуМ";
const description =
  "Полное погружение, топовое оборудование, приятная атмосфера";
const creationYear = 2026;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/png" href="/favicon.png" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL("social.png", Astro.site)} />
    <meta property="og:url" content={Astro.site} />
  </head>
  <body>
    <Header />
    <SideMenu />
    <main>
      <Hero />
      <Photos />
      <Promo />
      <Bundles />
      <Tariffs />
      <CTA text="Погрузись в мир безудержного веселья" action="Забронировать" />
      <Games />
      <CTA text="Нашёл игру по вкусу?" action="Играть" />
      <Videos />
      <CTA text="Заинтересовало видео?" action="Смотреть" />
    </main>
    <Footer {title} {creationYear} />
  </body>
</html>

<style lang="scss">
  @use "../styles/theme";

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: clip;
  }

  @media screen and (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  body {
    background-color: theme.$bg;
  }
</style>
